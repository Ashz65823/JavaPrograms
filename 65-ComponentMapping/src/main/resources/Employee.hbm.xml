<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.jboss.org/dtd/hibernate/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.zensar.training.bean.Employee" table="Employees1">
  <id name="id" column="EmpId">
  <generator class="native"></generator>
  </id>
  <property name="name" column="EName"></property>
  <property name="basicSalary" column="EBasic"></property>
  <component name="address">
  <property name="doorNumber" column="DoorNumber"></property>
  <property name="areaName" column="AreaName"></property>
  <property name="cityName" column="CityName"></property>
  </component>
  </class> 
</hibernate-mapping>